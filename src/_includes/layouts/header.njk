<header id="app-header" class="sm:flex sm:items-center mb-8">
  <h1 class="mb-4 sm:mb-0 font-bold">
    <a class="no-underline" href="/">byodian's blog</a>
  </h1>
  <ul class="flex items-center justify-between sm:ml-16 md:gap-x-8 sm:gap-x-4 gap-x-1 list-none pl-0">
    {% for menu in setting.menu %}
      <li class="pl-0">
        <a href="{{ menu.url }}">{{ menu.name }}</a>
      </li>
    {% endfor %}
  </ul>
</header>
