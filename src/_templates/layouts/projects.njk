{% extends "layouts/base.njk" %}

{% block pageHeader %}{% endblock pageHeader %}

{% block projectsPage %}

  <section class="projects">
    <div class="columns">
      {% for project in collections.projects %}
        <div class="column">
          <a href="{{ project.url }}">
            <div class="box">
              <figure class="column__photo-box">
                <img class="column__photo" src="{{ project.data.imageUrl }}" alt="{{ project.data.imageAlt }}">
              </figure>
              <div class="column__info">
                <h3 class="column__heading">{{ project.data.title }}</h3>
                <p class="column__description">{{ project.data.description }}</p>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock projectsPage %}

{% block pageFooter %}{% endblock pageFooter %}