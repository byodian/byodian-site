{% for column in columns %}
  <div class="column">
    <a href="{{ column.url }}">
      <div class="box">
        <figure class="column__photo-box">
          <img class="column__photo" src="{{ column.data.imageUrl }}" alt="{{ column.data.imageAlt }}">
        </figure>
        <div class="column__info">
          <h3 class="column__heading">{{ column.data.title }}</h3>
          <p class="column__description">{{ column.data.description }}</p>
        </div>
      </div>
    </a>
  </div>
{% endfor %}