{% extends "layouts/base.njk" %}

{% block content %}

  <section class="bookmarks">
    <section class="categories">
      {% for bookmark in collections.bookmarks %}

        <article class="article category__item">
          <div class="category__content">
            <h3 class="article__heading">
              <a class="article__link" href="{{ bookmark.url }}">
                {{ bookmark.data.title }}
              </a>
            </h3>
            <div class="article__info">
              <time class="article__time" datetime="2019-08-01">{{ bookmark.date }}</time>
              <a href="#" class="stress article__tag">{{ bookmark.data.category }}</a>
            </div>
            <p class="article__overview">{{ bookmark.data.description }}</p>
          </div>
          <a class="bookmarks__ref" href="{{ bookmark.data.sourceUrl }}">{{ bookmark.data.sourceName }}</a>
        </article>
      {% endfor %}

      <div class="btn-box">
        <button class="btn btn-prev">
          <a href="#">
            <span>&larr;
            </span>上一页</a>
        </button>
        <button class="btn btn-next">
          <a href="#">下一页
            <span>&rarr;</span></a>
        </button>
      </div>

    </section>
    <aside class="sidebar">
      <section class="tags">
        <h3 class="heading-tertiary heading-tertiary--aside">标签</h3>
        <ul class="tags__items">

        {% for bookmarksTag in bookmarksTags %}
          <li class="tags__item">
            <a class="tags__link" href="{{ bookmarksTag.link.url }}">{{ bookmarksTag.link.name }}</a>
          </li>
        {% endfor %}

        </ul>
      </section>
      <section class="sidebar__about">
        <h3 class="heading-tertiary heading-tertiary--aside">About</h3>
        <div class="sidebar__about-info">
          <figure class="sidebar__photo-box">
            <img class="sidebar__photo" src="/assets/img/avatar.png" alt="avatar photo">
          </figure>
          <p class="sidebar__para">web 设计、开发</p>
        </div>
      </section>
      <figure class="social-icons sidebar__social">
        {% for icon in icons %}
          <a class="social-link" href="{{ icon.link.url}}">
            <svg class="social-icon">
              <use xlink:href="/assets/img/sprites.svg#{{ icon.link.name }}"></use>
            </svg>
          </a>
        {% endfor %}
      </figure>
    </aside>
  </section>
{% endblock content %}
{% block pageFooter %}{% endblock pageFooter %}