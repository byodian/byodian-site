<!DOCTYPE html>
<html lang="zh">
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({'gtm.start': new Date().getTime(), event: 'gtm.js'});
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != 'dataLayer'
            ? '&l=' + l
            : '';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
        f
          .parentNode
          .insertBefore(j, f);
      })(window, document, 'script', 'dataLayer', 'GTM-N5BVZ6D');
    </script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+SC:300,400,500,700&display=swap&subset=chinese-simplified" rel="stylesheet">
    <link rel="icon" type="image/icon" href="{{ setting.icon }}">
    <link rel="stylesheet" href="/css/style.css">
    <title>{{ title }}</title>
  </head>
  <body>
    <div class="container">
      <nav class="nav">
        <div class="site-nav">
          {# <a href="/" class="site-nav__brand">
            <svg class="site-nav__logo">
              <use xlink:href="{{ setting.logo }}"></use>
            </svg>
          </a> #}
          <input type="checkbox" id="btn-menu" class="btn-menu">
          <label for="btn-menu" class="btn-label">
            <span class="btn-span"></span>
          </label>
          <div class="site-nav__items">
            <a href="/" class="site-nav__link">首页</a>
            <a href="/posts/" class="site-nav__link">博客</a>
            <a href="/bookmarks/" class="site-nav__link">收藏夹</a>
            <a href="/recommend/" class="site-nav__link">推荐</a>
          </div>
        </div>
      </nav>
      <main class="content">
        {% block pageHeader %}
          <section class="page-heading">
            <h1 class="heading-primary">{{ title }}</h1>
          </section>
        {% endblock pageHeader %}
        {% block content %}
          {{ content | safe }}
        {% endblock content %}
        {% block articlesPage %}{% endblock articlesPage %}
        {% block projectsPage %}{% endblock projectsPage %}
      </main>
      {% block pageFooter %}
        <footer class="footer">
          <div class="site-info">
            <figure class="social-icons homepage-icons">
              {% for icon in setting.socials %}
                <a class="social-link" target="_blank" href="{{ icon.url}}">
                  <svg class="social-icon">
                    <use xlink:href="/assets/img/sprites.svg#{{ icon.name }}"></use>
                  </svg>
                </a>
              {% endfor %}
            </figure>
          </div>
          <p>&copy; 2019 - 2020 byodian | build with
            <a class="stress" href="https://www.11ty.io/">11ty</a>
            and
            <a class="stress" href="https://www.netlify.com/">Netlify</a>.
          </p>
        </footer>
      {% endblock pageFooter %}
    </div>
    <script src="/js/script.js"></script>
    <script src="https://kit.fontawesome.com/d101a7035d.js" crossorigin="anonymous"></script>
  </body>
</html>